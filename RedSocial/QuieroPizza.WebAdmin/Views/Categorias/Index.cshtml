@model IEnumerable<QuieroPizza.BL.Categoria>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="container-fluid jumbotron-fluid stay mt-5 pt-5 pb-5">
    <p>
        @Html.ActionLink("Agregar nueva categoria", "Crear")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                    @Html.ActionLink("Detalles", "Detalle", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Eliminar", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    </div>